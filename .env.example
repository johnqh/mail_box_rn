# Signa Email React Native Environment Configuration
# Copy this file to .env and fill in your values
# Note: React Native uses react-native-config, not VITE_ prefix

# API URLs
INDEXER_URL=https://indexer.0xmail.box
WILDDUCK_URL=https://wildduck.0xmail.box

# WalletConnect - Get your project ID from https://cloud.walletconnect.com/
WALLETCONNECT_PROJECT_ID=your-walletconnect-project-id

# RevenueCat (Subscriptions)
REVENUECAT_API_KEY=your-revenuecat-api-key

# Alchemy (Blockchain RPC)
ALCHEMY_API_KEY=your-alchemy-api-key

# Firebase Configuration
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
FIREBASE_APP_ID=your-firebase-app-id
FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Development flags (set to 'true' to enable)
MOCK_AUTH=false
MOCK_DATA=false
